<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.textinputlayout.MainActivity">

    <LinearLayout
        android:id="@+id/RegTxt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="25dp"
        android:gravity="center"
        android:layout_alignParentTop="true">

        <android.support.design.widget.TextInputLayout

            android:id="@+id/Reg_layoutId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/Reguname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="uname"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:textSize="@dimen/dimLoginInputTextSize"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputLayoutregAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/regAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:textSize="@dimen/dimLoginInputTextSize" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputLayoutemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/regemail"
                android:layout_width="0dp"
                android:layout_height="@dimen/loginBtnheight"
                android:layout_alignLeft="@+id/linearLayout"
                android:layout_alignStart="@+id/linearLayout"
                android:layout_below="@+id/linearLayout"
                android:layout_marginLeft="31dp"
                android:layout_marginStart="31dp"
                android:layout_marginTop="24dp"
                android:layout_weight="0.5"
                android:hint="email"
                />
        </android.support.design.widget.TextInputLayout>




        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputLayoutregcontact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/regcontact"
                android:layout_width="0dp"
                android:layout_height="@dimen/loginBtnheight"
                android:layout_alignLeft="@+id/linearLayout"
                android:layout_alignStart="@+id/linearLayout"
                android:layout_below="@+id/linearLayout"
                android:layout_marginLeft="31dp"
                android:layout_marginStart="31dp"
                android:layout_marginTop="24dp"
                android:layout_weight="0.5"
                android:hint="contact"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputLayoutregBgroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/regbgroup"
                android:layout_width="0dp"
                android:layout_height="@dimen/loginBtnheight"
                android:layout_alignLeft="@+id/linearLayout"
                android:layout_alignStart="@+id/linearLayout"
                android:layout_below="@+id/linearLayout"
                android:layout_marginLeft="31dp"
                android:layout_marginStart="31dp"
                android:layout_marginTop="24dp"
                android:layout_weight="0.5"
                android:hint="bgroup"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputLayoutregdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/regdate"
                android:layout_width="0dp"
                android:layout_height="@dimen/loginBtnheight"
                android:layout_alignLeft="@+id/linearLayout"
                android:layout_alignStart="@+id/linearLayout"
                android:layout_below="@+id/linearLayout"
                android:layout_marginLeft="31dp"
                android:layout_marginStart="31dp"
                android:layout_marginTop="24dp"
                android:layout_weight="0.5"
                android:hint="reg date"
                />
        </android.support.design.widget.TextInputLayout>



        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputLayoutimage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/image"
                android:layout_width="0dp"
                android:layout_height="@dimen/loginBtnheight"
                android:layout_alignLeft="@+id/linearLayout"
                android:layout_alignStart="@+id/linearLayout"
                android:layout_below="@+id/linearLayout"
                android:layout_marginLeft="31dp"
                android:layout_marginStart="31dp"
                android:layout_marginTop="24dp"
                android:layout_weight="0.5"
                android:hint="image"
                />


        </android.support.design.widget.TextInputLayout>


    </LinearLayout>



    <LinearLayout
        android:id="@+id/RegTxt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="25dp"
        android:gravity="center"
        android:layout_alignParentTop="true">


        <Button
            android:layout_marginRight="25dp"
            android:id="@+id/btnsave"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="@dimen/loginBtnheight"
            android:hint="save"/>
        </LinearLayout>


</RelativeLayout>
